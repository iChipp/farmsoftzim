{% extends 'base.html.twig' %}

{% block body %}
{% trans_default_domain "dashboard" %}
<div class="be-wrapper">
    {% include 'navbar.html.twig' %} 
    {% include 'sidebar.html.twig' %}

    <div class="be-content">
        <div class="page-head">
            <h2 class="page-head-title">{% trans %}Action for{% endtrans %} {{ plant.seed.name }}</h2>
        </div>

        <div class="main-content container-fluid">
            <div class="row">
                <div class="col-md-6">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            {% for message in app.flashes('notice') %}
                                <div class="flash-notice">
                                    {{ message }}
                                </div>
                            {% endfor %}
                            {{ form_start(form) }}
                                <div class="form-group">
                                    <label>Seedling date</label>
                                    <input type="text" disabled value="{{ seedlingDate }}" class="form-control">
                                </div>
                                <div class="form-group"> 
                                    {{ form_label(form.action, 'Harvest or Dispose') }}
                                    {{ form_widget(form.action) }}
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.note) }}
                                    {{ form_errors(form.note) }}
                                    {{ form_widget(form.note, {'attr': {'class': 'form-control'}}) }}
                                </div>
                                <div class="row">
                                    <div class="col-xs-12 text-center">
                                        {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary btn-lg'}}) }}
                                        <a href="{{ path('plants') }}" class="btn btn-default btn-lg">{% trans %}Cancel{% endtrans %}</a>
                                    </div>
                                </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% include 'right-sidebar.html.twig' %}
</div>
{% endblock %}